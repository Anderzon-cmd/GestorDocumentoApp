@{
    ViewData["Title"] = "Home Page";
}

<div class="mx-8 flex flex-col">

    <div>
        <h1 class="text-2xl font-semibold antialiased">
            Proyectos
        </h1>

        <h3 class="text-xl">Proyectos en seguimiento</h3>
    </div>

    <div class="mb-10">
        @* TODO: //  Proyectos  *@

        <div class="my-2 flex justify-end">
            <button class="rounded-md bg-blue-700 px-10 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-800"
                >
                Crear
            </button>
        </div>

        <h3 class="text-2xl font-bold">Table Template</h3>
        <table class="min-w-full">

            <thead class="border-b bg-gray-200">
                <tr>
                    <th scope="col"
                        class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                        Id
                    </th>
                    <th scope="col"
                        class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                        Nombre
                    </th>

                    <th scope="col"
                        class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                        Descripcion
                    </th>

                    <th scope="col"
                        class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                        Clave
                    </th>

                    <th scope="col"
                        class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                
                <tr
                    class="border-b bg-white transition duration-300 ease-in-out hover:bg-gray-100">
                    <td class="px-6 py-4 text-sm font-medium whitespace-nowrap text-gray-900">
                        id
                    </td>

                    <td class="px-6 py-4 text-sm font-light whitespace-nowrap text-gray-900">
                        name
                    </td>

                    <td class="max-w-xs overflow-hidden px-6 py-4 text-sm font-light text-ellipsis whitespace-nowrap text-gray-900">
                        description
                    </td>

                    <td class="px-6 py-4 text-sm font-light whitespace-nowrap text-gray-900">
                        key
                    </td>

                    <td class="flex items-center px-6 py-4">
                        <button
                            
                            class="font-medium text-blue-600 hover:underline dark:text-blue-500"
                            >
                            Edit
                        </button>

                        <button
                            class="ms-3 font-medium text-red-600 hover:underline dark:text-red-500"
                            >
                            Remove
                        </button>
                        <a href="/" class="ms-3 font-medium text-green-600 hover:underline dark:text-green-500">
                        Proyetos
                        </a>

                    </td>

                </tr>

                
            </tbody>
        </table>

        <h3 class="text-2xl font-bold">Formulario template</h3>

        <div class="mt-8 grid grid-cols-2">
            <form class="mx-auto w-full max-w-md" onSubmit={handleSubmit(onSubmit)}>
                <div class="group relative z-0 mb-5 w-full">
                    <input type="email"
                           id="email"
                           class="peer block w-full appearance-none border-0 border-b-2 border-gray-300 bg-transparent px-0 py-2.5 text-sm
                       text-gray-900 focus:border-blue-600 focus:ring-0 focus:outline-none"
                           />

                    <label htmlFor="email" class="absolute top-3 -z-10 origin-[0] -translate-y-6 scale-75 transform text-sm text-gray-500 duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:start-0 peer-focus:-translate-y-6 peer-focus:scale-75 peer-focus:font-medium peer-focus:text-blue-600 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-1/4">Correo</label>
                    
                </div>
                <div class="group relative z-0 mb-5 w-full">
                    <input type="password" id="password"
                           disabled={!!userCreate}
                           class="peer block w-full appearance-none border-0 border-b-2 border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:border-blue-600 focus:ring-0 focus:outline-none"
                           placeholder=" " required
                           />
                    <label htmlFor="password" class="absolute top-3 -z-10 origin-[0] -translate-y-6 scale-75 transform text-sm text-gray-500 duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:start-0 peer-focus:-translate-y-6 peer-focus:scale-75 peer-focus:font-medium peer-focus:text-blue-600 rtl:peer-focus:translate-x-1/4">Password</label>
                    
                </div>
                <div class="group relative z-0 mb-5 w-full">
                    <input type="password" id="floating_repeat_password"
                           disabled={!!userCreate}
                           class="peer block w-full appearance-none border-0 border-b-2 border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:border-blue-600 focus:ring-0 focus:outline-none"
                           placeholder=" "
                           />
                    <label htmlFor="floating_repeat_password" class="absolute top-3 -z-10 origin-[0] -translate-y-6 scale-75 transform text-sm text-gray-500 duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:start-0 peer-focus:-translate-y-6 peer-focus:scale-75 peer-focus:font-medium peer-focus:text-blue-600 rtl:peer-focus:translate-x-1/4">Confirm password</label>
                    
                </div>


                <button type="submit"
                        disabled={!!userCreate}
                        class="max-w-fit rounded-lg px-5 py-2.5 text-center text-sm font-medium text-white focus:ring-4 focus:ring-blue-300 focus:outline-none sm:w-auto"
                        >
                    Crear
                </button>
            </form>

            
        </div>

    </div>
    
</div>
