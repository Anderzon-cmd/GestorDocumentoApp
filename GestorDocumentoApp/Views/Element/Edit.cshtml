@model ElementVM
@{
    ViewData["Title"] = "Element Page";
}


@await Html.PartialAsync("_HeaderTitle",new HeaderTitle{Title="Tipo de elemento",Subtitle="Formulario de edicion"})

<div>
    <form class="mx-auto w-full max-w-md" asp-action="Edit" method="post" asp-route-id="@Model.Id">

        <div class="group relative z-0 mb-5 w-full">

            <div class="sm:col-span-3">
                <label asp-form="Name" class="text-sm/6 block font-medium text-gray-900">Nombre</label>
                <div class="mt-2">
                    <input type="text" asp-for="Name" autocomplete="given-name" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-red-500"></span>

        </div>


        <div class="group relative z-0 mb-5 w-full">

            <div class="sm:col-span-3">
                <label asp-form="CreatedDate" class="text-sm/6 block font-medium text-gray-900">Fecha de creacion</label>
                <div class="mt-2">
                    <input type="datetime-local" step="60" asp-for="CreatedDate" value="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm")" autocomplete="given-name" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" />
                </div>
            </div>
            <span asp-validation-for="CreatedDate" class="text-red-500"></span>

        </div>


        <div class="group relative mb-5">
            <div class="col-span-full">
                <label asp-for="Description" class="text-sm/6 block font-medium text-gray-900">Descripcion</label>
                <div class="mt-2">
                    <textarea asp-for="Description" rows="3" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6"></textarea>
                </div>
            </div>
        </div>


        <div class="mb-5">
            <label for="countries" class="mb-2 block text-sm font-medium text-gray-900">Seleccione un opcion</label>
            <select asp-for="ProjectId" asp-items="Model.Projects" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-600 focus:ring-blue-600">
                <option value="">-- Seleccione el proyecto</option>
            </select>
            <span asp-validation-for="ProjectId" class="text-red-500"></span>
        </div>
        


        <div>
            <label for="countries" class="mb-2 block text-sm font-medium text-gray-900">Seleccione un opcion</label>

            <select asp-for="ElementTypeId" asp-items="Model.ElementTypes" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-600 focus:ring-blue-600">
                <option value="">-- Seleccione el tipo de elemento</option>
            </select>
        </div>

        <button type="submit"
                class="mt-5 max-w-fit rounded-lg bg-blue-700 px-5 py-2.5 text-center text-sm font-medium text-white focus:ring-4 focus:ring-blue-300 focus:outline-none sm:w-auto">
            Actualizar
        </button>
    </form>


</div> 